<h1 class="text-center mt4">Create a new category</h1>

<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/error_message", obj: @category %>

      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_field :name,
                         class: "form-control shadow rounded",
                         placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="form-group justify-content-center mt-3">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to "[ Cancel and return to articles listing ]",
    articles_path,
    class: "text-info" %>
  </div>
</div>
